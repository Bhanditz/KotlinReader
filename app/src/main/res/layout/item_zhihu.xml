<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/spacingNormal"
              android:layout_marginLeft="@dimen/spacingNormal"
              android:layout_marginRight="@dimen/spacingNormal"
              android:background="@color/colorWhite"
              android:elevation="@dimen/spacingXSmall"
              android:padding="@dimen/spacingNormal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        style="@style/TextStyle.Black.Large"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="2"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/content"
        style="@style/TextStyle.Gray"
        android:layout_marginTop="@dimen/spacingNormal"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
        android:maxLines="5"/>

</LinearLayout>